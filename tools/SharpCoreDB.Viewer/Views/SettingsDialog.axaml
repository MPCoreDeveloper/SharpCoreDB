<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SharpCoreDB.Viewer.ViewModels"
        xmlns:loc="using:SharpCoreDB.Viewer.Converters"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="300"
        x:Class="SharpCoreDB.Viewer.Views.SettingsDialog"
        x:DataType="vm:SettingsViewModel"
        Classes="Dialog"
        Title="{loc:Localize SettingsTitle}"
        Width="420" Height="280"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Icon="/Assets/SharpCoreDB.ico">

    <Design.DataContext>
        <vm:SettingsViewModel/>
    </Design.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
            <PathIcon Data="{StaticResource SettingsIcon}" Width="20" Height="20" VerticalAlignment="Center"/>
            <TextBlock Text="{loc:Localize SettingsTitle}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Settings Content -->
        <StackPanel Grid.Row="1" Spacing="20">
            
            <!-- Language Selection -->
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                    <PathIcon Data="{StaticResource LanguageIcon}" VerticalAlignment="Center"/>
                    <TextBlock Text="{loc:Localize LanguageLabel}" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <ComboBox ItemsSource="{Binding AvailableLanguages}"
                          SelectedItem="{Binding SelectedLanguage}"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="{StaticResource LanguageIcon}" Width="14" Height="14" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Theme Selection with Toggle -->
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                    <PathIcon Data="{StaticResource ThemeIcon}" VerticalAlignment="Center"/>
                    <TextBlock Text="{loc:Localize ThemeLabel}" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <PathIcon Data="{StaticResource SunIcon}" Width="16" Height="16" VerticalAlignment="Center"/>
                        <TextBlock Text="Light" 
                                   VerticalAlignment="Center"
                                   FontSize="14"/>
                    </StackPanel>
                    <ToggleSwitch IsChecked="{Binding IsDarkTheme}"
                                  OffContent=""
                                  OnContent=""
                                  MinWidth="50"/>
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <PathIcon Data="{StaticResource MoonIcon}" Width="16" Height="16" VerticalAlignment="Center"/>
                        <TextBlock Text="Dark" 
                                   VerticalAlignment="Center"
                                   FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Command="{Binding CancelCommand}"
                    Width="100">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <PathIcon Data="{StaticResource DisconnectIcon}" Width="14" Height="14"/>
                    <TextBlock Text="{loc:Localize Cancel}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding SaveCommand}"
                    Width="100"
                    Classes="accent">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <PathIcon Data="{StaticResource SaveIcon}" Width="14" Height="14"/>
                    <TextBlock Text="{loc:Localize Save}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>

</Window>
