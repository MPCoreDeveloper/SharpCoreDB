<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SharpCoreDB.Viewer.ViewModels"
        xmlns:loc="using:SharpCoreDB.Viewer.Converters"
        xmlns:conv="using:SharpCoreDB.Viewer.Converters"
        mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="400"
        x:Class="SharpCoreDB.Viewer.Views.ConnectionDialog"
        x:DataType="vm:ConnectionDialogViewModel"
        Classes="Dialog"
        Title="{loc:Localize ConnectionDialogTitle}"
        Width="650" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Icon="/Assets/SharpCoreDB.ico">

    <Design.DataContext>
        <vm:ConnectionDialogViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style Selector="TextBlock.error">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Window.Styles>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <PathIcon Data="{StaticResource DatabaseIcon}" Width="24" Height="24" VerticalAlignment="Center"/>
                <TextBlock Classes="header" Text="{loc:Localize ConnectionDialogTitle}" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1" Spacing="12" VerticalAlignment="Top">
            
            <!-- Database Path -->
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                    <PathIcon Data="{StaticResource FolderIcon}" Width="14" Height="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{loc:Localize DatabasePath}" VerticalAlignment="Center"/>
                </StackPanel>
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <TextBox Grid.Column="0"
                             Text="{Binding DatabasePath}"
                             Watermark="{loc:Localize DatabasePathPlaceholder}"
                             IsEnabled="{Binding !IsConnecting}"/>
                    <Button Grid.Column="1"
                            Command="{Binding BrowseForDatabaseCommand}"
                            IsEnabled="{Binding !IsConnecting}"
                            Margin="5,0,0,0"
                            Width="110"
                            Height="32"
                            ToolTip.Tip="{loc:Localize BrowseTooltip}">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <PathIcon Data="{StaticResource FolderIcon}" Width="14" Height="14"/>
                            <TextBlock Text="{loc:Localize Browse}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="2"
                            Command="{Binding CreateNewDatabaseCommand}"
                            IsEnabled="{Binding !IsConnecting}"
                            Margin="5,0,0,0"
                            Width="110"
                            Height="32"
                            ToolTip.Tip="{loc:Localize NewTooltip}">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <PathIcon Data="{StaticResource DatabaseIcon}" Width="14" Height="14"/>
                            <TextBlock Text="{loc:Localize New}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
            
            <!-- Format Selector (shown only for new databases) -->
            <StackPanel IsVisible="{Binding ShowFormatSelector}">
                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                    <PathIcon Data="{StaticResource SettingsIcon}" Width="14" Height="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{loc:Localize DatabaseFormat}" VerticalAlignment="Center"/>
                </StackPanel>
                <ComboBox SelectedIndex="{Binding SelectedFormat, Converter={x:Static conv:EnumToIntConverter.Instance}}"
                          IsEnabled="{Binding !IsConnecting}"
                          HorizontalAlignment="Stretch"
                          Height="48">
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="4">
                            <PathIcon Data="{StaticResource FolderIcon}" Width="16" Height="16" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="{loc:Localize FormatDirectory}" FontWeight="SemiBold"/>
                                <TextBlock Text="{loc:Localize FormatDirectoryDesc}" 
                                          FontSize="10" 
                                          Foreground="Gray"
                                          TextWrapping="Wrap"
                                          MaxWidth="500"/>
                            </StackPanel>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="4">
                            <PathIcon Data="{StaticResource DocumentIcon}" Width="16" Height="16" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="{loc:Localize FormatSingleFile}" FontWeight="SemiBold"/>
                                <TextBlock Text="{loc:Localize FormatSingleFileDesc}" 
                                          FontSize="10" 
                                          Foreground="Gray"
                                          TextWrapping="Wrap"
                                          MaxWidth="500"/>
                            </StackPanel>
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <!-- Password -->
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                    <PathIcon Data="{StaticResource LockIcon}" Width="14" Height="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{loc:Localize MasterPassword}" VerticalAlignment="Center"/>
                </StackPanel>
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox Grid.Column="0"
                             Text="{Binding Password}"
                             Watermark="{loc:Localize PasswordPlaceholder}"
                             PasswordChar="*"
                             RevealPassword="{Binding IsPasswordVisible}"
                             IsEnabled="{Binding !IsConnecting}"/>
                    <Button Grid.Column="1"
                            Command="{Binding TogglePasswordVisibilityCommand}"
                            IsEnabled="{Binding !IsConnecting}"
                            Width="40"
                            Height="32"
                            Padding="8"
                            Margin="2,0,0,0"
                            ToolTip.Tip="{Binding IsPasswordVisible, Converter={x:Static conv:BoolConverters.ShowHidePasswordTooltip}}">
                        <PathIcon Data="{Binding IsPasswordVisible, Converter={x:Static conv:BoolConverters.EyeIconConverter}}" 
                                  Width="16" 
                                  Height="16"/>
                    </Button>
                </Grid>
            </StackPanel>

            <!-- Error Message -->
            <StackPanel Orientation="Horizontal" 
                        Spacing="5"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                        Margin="0,5,0,0">
                <PathIcon Data="{StaticResource ErrorIcon}" Width="14" Height="14" Foreground="Red" VerticalAlignment="Top" Margin="0,2,0,0"/>
                <TextBlock Classes="error"
                           Text="{Binding ErrorMessage}"
                           TextWrapping="Wrap"
                           MaxWidth="550"/>
            </StackPanel>

            <!-- Connection Status -->
            <StackPanel Orientation="Horizontal"
                        Spacing="10"
                        IsVisible="{Binding IsConnecting}"
                        Margin="0,5,0,0">
                <ProgressBar IsIndeterminate="True" Width="300" Height="4" VerticalAlignment="Center"/>
                <TextBlock Text="{loc:Localize Connecting}" VerticalAlignment="Center"/>
            </StackPanel>

        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    VerticalAlignment="Bottom">
            <Button Command="{Binding CancelCommand}"
                    IsEnabled="{Binding !IsConnecting}"
                    Width="120"
                    Height="36">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <PathIcon Data="{StaticResource DisconnectIcon}" Width="14" Height="14"/>
                    <TextBlock Text="{loc:Localize Cancel}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding ConnectCommand}"
                    IsEnabled="{Binding !IsConnecting}"
                    Width="120"
                    Height="36"
                    Classes="accent">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <PathIcon Data="{StaticResource ConnectIcon}" Width="14" Height="14"/>
                    <TextBlock Text="{loc:Localize Connect}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>

</Window>
